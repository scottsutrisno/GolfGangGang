<td>
<%= link_to user.email, user %>
</td>

<td>
<%= form_for(user) do |f| %>
<%= f.select(:role, User.roles.keys.map {|role| [role.titleize, role]} ) %>
</td>

<td><button><%= f.submit 'Change Access' %></button>
<% end %>
</td>

<td>
<%= link_to "Delete User", user_path(user), method: :delete, class: 'button', data: { confirm: "Are you Sure?" } %>
</td>
