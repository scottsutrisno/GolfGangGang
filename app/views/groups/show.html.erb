<h1>Groups</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Avatar</th>
        <th scope="col">Status</th>
        <th scope="col">Groups</th>
      </tr>
    </thead>
    <tbody>

      <tr>
        <td><%= @group.name %></td>
        <td><img src="<%= @group.avatar %>"></td>
        <td><%= @group.status %></td>
        <td class="btn btn-dark"><%= link_to "Edit", edit_group_path(@group) %></td>
        <td class="btn btn-danger"><%= link_to 'Delete', @group, method: :delete, data: { confirm: 'Are you Sure?' } %></td>

      </tr>
    </tbody>
  </table>



<h2>Members:</h2>

    <% @group.users.each do |user|%>
        <p>Username: <%= user.username %> - <%= user.first_name %><%= user.last_name %></p>
    <% end %>
