<h1>Groups</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Avatar</th>
        <th scope="col">Status</th>
        <th scope="col">Groups</th>
      </tr>
    </thead>
    <tbody>

      <tr>
        <td><%= @group.name %></td>
        <td><img src="<%= @group.avatar %>"></td>
        <td><%= @group.status %></td>
        <td class="btn btn-dark"><%= link_to "Edit", edit_group_path(@group) %></td>
        <td class="btn btn-danger"><%= link_to 'Delete', @group, method: :delete, data: { confirm: 'Are you Sure?' } %></td>

      </tr>
    </tbody>
  </table>


<table class="table">
      <tbody>
        <tr>

          <th scope="row">Members:</th>

          </tr>
          <tr>


            <% @group.users.each do |user|%>
            <td><%= user.first_name %> <%= user.last_name %> </td>
            <% end %>




      </tr>
      </tbody>
      </table>